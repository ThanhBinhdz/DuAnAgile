        <div class="container" style="margin-top: 40px;">
            <div class="row border" style="padding: 10px;margin-bottom: 15px;">
                <form action="" method="post" enctype="multipart/form-data">
                    <h4 style="margin-top: 10px;margin-bottom: 20px;">Sửa Sản Phẩm</h4>
                    <div class="mb-3">
                        <div class="col-md-3">
                            <label for="validationDefault04" class="form-label">Loại Sản Phẩm</label>
                            <select class="form-select" name="loaisp" required>
                                <% listTL.forEach( function(i){ 
                                    let selected='' ;  
                                    if(String ( i._id)==String (objSP.idloai)) selected='selected' ; %>
                                    %>
                                    <option <%= selected %> value="<%=i._id%>">
                                        <%= i.tenloai %>
                                    </option>
                                    <% })%>
                            </select>
                        </div>
                    </div>
                    <div class="mb-3">
                        <label for="exampleFormControlInput1" class="form-label">Tên Sản Phẩm</label>
                        <input type="text" class="form-control" name="tensp" placeholder="Nhập tên sản phẩm" value="<%=objSP.tensp%>" required>
                    </div>
                    <div class="mb-3">
                        <label for="exampleFormControlInput1" class="form-label">Giá Tiền</label>
                        <input type="number" class="form-control" name="giatien" placeholder="Nhập giá tiền" value="<%=objSP.giatien%>" required>
                    </div>
                    <div class="mb-3">
                        <label for="exampleFormControlTextarea1" class="form-label">Nội Dung</label>
                        <!-- <textarea class="form-control" name="noidung" rows="3" placeholder="Nhập nội dung" value="<%=objSP.noidung%>"></textarea> -->
                        <input style="height: 100px;" type="text" class="form-control" name="mota" placeholder="Nhập tên sản phẩm" value="<%=objSP.mota%>" required>
                    </div>
                    <div class="mb-3">
                        <label for="exampleFormControlTextarea1" class="form-label">Ảnh</label>
                        <input class="form-control" type="file" name="image" value="<%=objSP.image%>" required>
                    </div>
                    <div class="mb-3">
                        <button type="submit" class="btn btn-success">Sửa</button>
                    </div>
                </form>
            </div>

        </div>
